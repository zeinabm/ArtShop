<div class="new-form">
  <h1>ثبت نام </h1>

  <%= form_for @user, :url => '/users', :method => :post do |f| %>

      <table>
        <thead></thead>
        <tbody>
        <tr>
          <td><%= f.email_field :email, autofocus: true %></td>
          <td><span> * </span><%= f.label :email, "ایمیل" %></td>

        </tr>
        <tr>
          <td><%= f.password_field :password, autocomplete: "off" %></td>
          <td><span> * </span><%= f.label :password, "رمز عبور" %></td>

        </tr>
        <tr>
          <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
          <td><span> * </span><%= f.label :password_confirmation, "تکرار رمز عبور" %></td>

        </tr>
        <tr>
          <td><%= f.text_field :name %></td>
          <td><span> * </span><%= f.label :name, "نام" %></td>
        </tr>
        <tr>
          <td><%= f.text_field :lastname %></td>
          <td><%= f.label :lastname, "نام خانوادگی" %></td>
        </tr>
        <tr>
          <td><%= f.phone_field :phone %></td>
          <td><%= f.label :phone, "تلفن" %></td>
        </tr>
        <tr>
          <td><%= f.text_area :address, :rows => 3 %></td>
          <td><%= f.label :address, "آدرس " %></td>
        </tr>

        <tr>
          <td><label>همچنین قصد دارم یک فروشگاه ایجاد کنم</label></td>
          <td><%= f.check_box :role, {:id => "seller-check-box"}, "seller", "user" %></td>
        </tr>

        </tbody>
      </table>

      <%= f.fields_for :store do |field| %>
          <%= render 'stores/info', {:f => field} %>
      <% end %>

      <div class="actions" id="first">
        <%= link_to 'انصراف', items_path %>
        <%= f.submit "ثبت نام " %>
      </div>

      <div class="actions" id="second">
        <%= link_to 'انصراف', items_path %>
        <%= link_to 'ادامه', "#" %>
      </div>

  <% end %>

</div>

<script>
    $(document).ready(function () {
        $('#second').hide();
        $('table').on('click', '#seller-check-box', function () {
            if ($(this).is(':checked')) {
                $('#first').hide();
                $('#second').show();
            }
            else {
                $('#first').show();
                $('#second').hide();
            }
        });
    });
</script>



